{
	"compilerOptions": {
		// Percorsi di input e output
		"rootDir": "./src",
		"outDir": "./dist/functions",

		// Compatibilit√† con Node.js e Netlify Functions
		"target": "ES2020",
		"module": "nodenext",
		"moduleResolution": "NodeNext",
		"lib": ["ES2020"],
		"types": ["node"],
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"allowSyntheticDefaultImports": true,

		// Opzioni per debugging e tipizzazione
		"sourceMap": true,
		"declaration": false,
		"skipLibCheck": true,
		"strict": true,
		"isolatedModules": true,

		// Opzioni consigliate per un backend serverless
		"noUncheckedIndexedAccess": true,
		"exactOptionalPropertyTypes": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist"]
}
